{
  "name": "anima-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && npm install -w backend && npm install -w frontend",
    "start:dev": "concurrently \"npm:backend\" \"npm:frontend\"",
    "backend": "npm run start -w backend",
    "frontend": "cd frontend && npm run dev",
    "build": "npm run build -w frontend",
    "test": "npm test -w backend && npm test -w frontend",
    "lint": "npm run lint -w backend && npm run lint -w frontend",
    "migrate": "npm run migrate -w backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "@aws-sdk/client-rekognition": "^3.913.0",
    "aws-sdk": "^2.1692.0",
    "multer": "^2.0.2"
  }
}
